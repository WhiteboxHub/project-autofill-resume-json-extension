{
  "manifest_version": 3,
  "name": "AutoFill Job Applications",
  "version": "1.0",
  "description": "Auto-fills job application forms using your JSON resume.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
